<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background='#3c3939'
     tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtoperand1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operand 1"
        android:textColor='#d67c31'
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />

    <EditText
        android:id="@+id/edittext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint='#c8faff'
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor='#d67c31'
        app:layout_constraintEnd_toEndOf="@+id/txtoperand1"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/txtoperand1"
        app:layout_constraintTop_toTopOf="@+id/txtoperand1" />

    <TextView
        android:id="@+id/txtoperand2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Operand 2"
        android:textColor='#d67c31'
        app:layout_constraintEnd_toEndOf="@+id/txtoperand1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtoperand1"
        app:layout_constraintTop_toTopOf="@+id/txtoperand1" />

    <EditText
        android:id="@+id/edittext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:backgroundTint='#c8faff'
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor='#d67c31'
        app:layout_constraintEnd_toEndOf="@+id/txtoperand1"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/txtoperand1"
        app:layout_constraintTop_toTopOf="@+id/txtoperand1" />

    <Button
        android:id="@+id/buttonadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint='#3c3939'
        android:text="+"
        android:textColor='#d67c31'
        app:layout_constraintEnd_toEndOf="@+id/txtoperand1"
        app:layout_constraintTop_toTopOf="@+id/txtoperand1" />

    <Button
        android:id="@+id/buttonmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="240dp"
        android:backgroundTint='#3c3939'
        android:text="-"
        android:textColor='#d67c31'
        app:layout_constraintStart_toStartOf="@+id/txtoperand1"
        app:layout_constraintTop_toTopOf="@+id/txtoperand1" />

    <Button
        android:id="@+id/buttondiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint='#3c3939'
        android:text="/"
        android:textColor='#d67c31'
        app:layout_constraintEnd_toEndOf="@+id/txtoperand1"
        app:layout_constraintTop_toTopOf="@+id/txtoperand1" />

    <Button
        android:id="@+id/buttonmul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="312dp"
        android:backgroundTint='#3c3939'
        android:text="*"
        android:textColor='#d67c31'
        app:layout_constraintStart_toStartOf="@+id/txtoperand1"
        app:layout_constraintTop_toTopOf="@+id/txtoperand1" />

    <Button
        android:id="@+id/buttonmod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="396dp"
        android:backgroundTint='#3c3939'
        android:text="%"
        android:textColor='#d67c31'
        app:layout_constraintEnd_toEndOf="@+id/txtoperand1"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="@+id/txtoperand1"
        app:layout_constraintTop_toTopOf="@+id/txtoperand1" />

    <TextView
        android:id="@+id/answeris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:text="Result is:"
        android:textColor='#d67c31'
        app:layout_constraintEnd_toEndOf="@+id/txtoperand1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtoperand1"
        app:layout_constraintTop_toTopOf="@+id/txtoperand1" />

    <TextView
        android:id="@+id/textresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="492dp"
        android:text="result"
        android:textColor='#d67c31'
        app:layout_constraintEnd_toEndOf="@+id/txtoperand1"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/txtoperand1"
        app:layout_constraintTop_toTopOf="@+id/txtoperand1" />

</androidx.constraintlayout.widget.ConstraintLayout>